{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020", // Still targeting ES2020
    
    /* Modules */
    "module": "NodeNext",  // Use NodeNext to automatically add .js extensions
    "moduleResolution": "NodeNext", // Proper ESM handling for Node.js
    "rootDir": "src", // Your source directory
    "outDir": "dist", // Output directory for compiled JS files

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": true,

    /* Emit */
    "noEmitOnError": true,

    /* Interop Constraints */
    "esModuleInterop": true,  // Enable interop with CommonJS
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true
  },
  "include": ["src"]
}
